<h1>Notes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <% if note.user == current_user %>
        <tr>
          <td><%= note.title %></td>
          <td><%= note.content %></td>
          <td><%= link_to 'Show', note %></td>
          <td><%= link_to 'Edit', edit_note_path(note) %></td>
          <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'JesteÅ› pewien?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

